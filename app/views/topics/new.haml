%h1
  创建作业题目

- form_for(@topic) do |f|
  = f.error_messages
  
  %p
    = f.label :title,"标题"
    %br
    = f.text_field :title
  %p
    = f.label :description,"作业要求"
    %br
    = f.text_area :description
  %p
    = f.label :course_id,"所属课程"  
    %br
    = f.select :course_id,Course.all.map{|course| [course.name,course.id] }
  %p
    = f.label :deadline,"上交截至日期"  
    %br
    = f.datetime_select :deadline,:use_month_numbers => true,:include_blank=>true
  %p
    = f.label :state,"作业状态"  
    %br
    = f.select :state,Topic::STATE
  %p
    = f.submit '创建'

= link_to '作业题目列表', topics_path
