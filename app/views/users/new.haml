- form_for @user do |f|
  = f.error_messages 

  %p
    = f.label :name,"姓名"
    = f.text_field :name,:size=>40
  %p 
    = f.label :password,"密码"
    = f.password_field :password,:size=>40
  %p
    = f.label :password_confirmation,"重复密码"
    = f.password_field :password_confirmation, :size => 40 
  %p 
    = f.submit "注册"
